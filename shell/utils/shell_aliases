## ls
alias lsl='ls -lhF --color=auto'
alias lst='ls -lt --color=auto'
alias lsa='ls -alhF --color=auto'

## short-hand commands
alias da='deactivate'
alias rsz='rsync -avz' # rsync with archive, verbose, compression
alias ktmux='tmux kill-server'

## useful directories
export DHOME="$HOME"
alias dhome='cd "$DHOME"'

export DDOT="$DHOME/dotfiles"
alias ddot='cd "$DDOT"'

export DDWN="$DHOME/Downloads"
alias ddwn='cd "$DDWN"'

export DONED="$DHOME/OneDrive"
alias doned='cd "$DONED"'

export DCODES="$DHOME/Documents/Codes"
alias dcodes='cd "$DCODES"'

export DQUOKKA="$DCODES/quokka"
alias dquokka='cd "$DQUOKKA"'

export DASGARD="$DCODES/asgard"
alias dasgard='cd "$DASGARD"'

## .